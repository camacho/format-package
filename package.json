{
  "name": "format-package",
  "version": "5.2.0",
  "description": "Sensible formatting and ordering of package.json",
  "license": "MIT",
  "engines": {
    "node": ">=7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/camacho/format-package.git"
  },
  "bugs": {
    "url": "https://github.com/camacho/format-package/issues"
  },
  "homepage": "https://github.com/camacho/format-package#readme",
  "author": "Patrick Camacho <patrick@daftdevelopers.com>",
  "contributors": [
    "Peter Chanthamynavong <peterkc@gmail.com>"
  ],
  "keywords": [
    "format",
    "order",
    "prettify",
    "organize",
    "package",
    "package.json",
    "prettier"
  ],
  "bin": "lib/cli/index.js",
  "main": "lib/index.js",
  "scripts": {
    "docs": "scripts/markdown.js",
    "format": "npm-run-all format:*",
    "format:docs": "prettier --write '**/*.md'",
    "format:package": "./lib/cli/index.js -w package.json",
    "format:source": "prettier --write '**/*.{js,json}'",
    "gamut": "npm-run-all reset docs format lint test",
    "lint": "eslint \"**/*.js\"",
    "prepublishOnly": "yarn gamut",
    "reset": "rimraf node_modules && yarn install",
    "test": "jest"
  },
  "lint-staged": {
    "**/package.json": [
      "yarn format:package",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    },
    "snapshotSerializers": [
      "./scripts/snapshot-serializers-ansi.js"
    ],
    "testMatch": [
      "**/lib/**/?(*.)+(spec|test).[jt]s?(x)",
      "**/__tests__/**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "chalk": "^2.4.2",
    "convert-hrtime": "^3.0.0",
    "cosmiconfig": "^5.2.1",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "json5": "^2.1.0",
    "resolve-from": "^5.0.0",
    "sort-scripts": "^1.0.1",
    "yargs": "^13.3.0"
  },
  "peerDependencies": {
    "prettier": "^1.18.2"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/fs-extra": "^8.0.0",
    "@types/hapi__joi": "^15.0.3",
    "@types/jest": "^24.0.16",
    "@types/node": "^12.6.8",
    "codecov": "^3.5.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb": "17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "execa": "^2.0.3",
    "glob": "^7.1.4",
    "has-ansi": "^3.0.0",
    "husky": "^3.0.2",
    "install-deps-postmerge": "^1.0.5",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "markdown-magic": "^0.1.25",
    "markdown-magic-engines": "^1.0.2",
    "markdown-magic-install-command": "^1.3.1",
    "markdown-magic-package-scripts": "^1.2.1",
    "markdown-magic-prettier": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "strip-ansi": "^5.2.0"
  }
}

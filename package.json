{
  "name": "format-package",
  "version": "4.5.0",
  "description": "Sensible formatting and ordering of package.json",
  "license": "MIT",
  "engines": {
    "node": ">=7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/camacho/format-package.git"
  },
  "bugs": {
    "url": "https://github.com/camacho/format-package/issues"
  },
  "homepage": "https://github.com/camacho/format-package#readme",
  "author": "Patrick <patrick@daftdevelopers.com>",
  "bin": "lib/cli/index.js",
  "main": "lib/index.js",
  "scripts": {
    "docs": "scripts/markdown.js",
    "format": "npm-run-all format:*",
    "format:js": "prettier --write \"**/*.{md,js,json}\"",
    "format:pkg": "./lib/cli/index.js -wp",
    "lint": "eslint \"**/*.js\"",
    "postmerge": "install-deps-postmerge",
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "test": "jest"
  },
  "lint-staged": {
    "**/package.json": [
      "yarn format:pkg",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "format",
    "order",
    "prettify",
    "organize",
    "package",
    "package.json",
    "prettier"
  ],
  "dependencies": {
    "chalk": "^2.1.0",
    "convert-hrtime": "^2.0.0",
    "globby": "^8.0.1",
    "sort-scripts": "^1.0.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "execa": "^0.10.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "install-deps-postmerge": "^1.0.2",
    "jest": "^22.0.4",
    "lint-staged": "^7.0.0",
    "markdown-magic": "^0.1.21",
    "markdown-magic-engines": "^1.0.2",
    "markdown-magic-install-command": "^1.3.0",
    "markdown-magic-package-scripts": "^1.2.1",
    "markdown-magic-prettier": "^1.0.3",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.7.0"
  }
}

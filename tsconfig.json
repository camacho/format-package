{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2016",
    "types": ["jest", "node"]
  },
  "exclude": [
    "node_modules/",
    ".github/",
    ".husky/",
    ".yarn/",
    "**/tests/",
    "**/**.test.ts/",
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "dist/"
  ],
  "include": ["src/", "src/**/*.json"]
}
